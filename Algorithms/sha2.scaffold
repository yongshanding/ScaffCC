void sha2Looper(qbit **k, qbit **w, qbit **x, int val){
	qbit *anc[256];
	rot(x,anc,256,val);
	x = anc;
	hsh(k,w,x);

}

void sha2(qbit **k, qbit **w, qbit **x, int n){
	//qbit *xtemp[256];
	//acquire(256,xtemp);
	for (int i = 0; i < n; i++){
		int idx = (32 * i) % 256;
		sha2Looper(k,w,x,idx);
	}
}

